{
  "liveServer.settings.port": 5504,

  // UI Customizations
  "workbench.startupEditor": "none",
  "workbench.editor.tabSizing": "shrink", // Hide activity bar for a cleaner UI
  "workbench.statusBar.visible": true,
  "workbench.preferredLightColorTheme": "GitHub Light",
  "workbench.preferredDarkColorTheme": "GitHub Dark Dimmed",
  "workbench.sideBar.location": "right", // Move sidebar to the right for less distraction
  "workbench.editor.showTabs": "none", // Hide tabs for a cleaner appearance

  // Editor Customizations
  "workbench.iconTheme": "fira-code-material-icon-theme", // Modern minimal icon theme
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "500",
  "editor.cursorBlinking": "expand",
  "editor.cursorStyle": "line",
  "editor.renderWhitespace": "boundary",
  "editor.tabSize": 2,
  "editor.smoothScrolling": true,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false, // Turn off minimap for simplicity
  "editor.codeLens": false, // Disable CodeLens for less clutter
  "editor.guides.bracketPairs": true,
  "editor.wordWrap": "on",
  "editor.bracketPairColorization.enabled": true,
  "editor.rulers": [80, 120],

  // Files & Formatting
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Terminal Customization
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.tabs.enabled": false, // Disable terminal tabs for simplicity

  // Git & Source Control
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "gitlens.views.repositories.files.layout": "tree",

  // Extensions Configuration
  "prettier.tabWidth": 2,
  "eslint.format.enable": true,

  // Performance Optimization
  "editor.largeFileOptimizations": true,
  "workbench.editor.enablePreview": false,

  // Additional Minimalism Settings
  "breadcrumbs.enabled": false, // Disable breadcrumbs
  "explorer.openEditors.visible": 1, // Hide "Open Editors" in the file explorer
  "explorer.compactFolders": false, // Keep folders expanded for readability
  "explorer.confirmDelete": false, // Skip delete confirmations for speed
  "debug.toolBarLocation": "hidden", // Hide debug toolbar
  "notebook.showCellStatusBar": "hidden",
  "workbench.activityBar.location": "hidden" // Hide notebook cell status bar
}
